<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no_image.jpg"%>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
          <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
    <%= link_to "", edit_user_path(user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
    </div>
    <div class="form-body my-2">
      <h2>New book</h2>
      <%= form_with model: book, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title, class:"form-control" %>
        <h4>Opinion</h4>
        <%= f.text_area :body, class:"form-control" %>
        <%= f.submit 'Create Book', class:"btn btn-sm btn-success my-3" %>
      <% end %>
    </div>
  </div>