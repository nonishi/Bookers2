<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, size: "100x100", fallback: "no_image.jpg"%>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
          <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
    <%= link_to "", edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
    </div>
    <h2 class="mt-3">New book</h2>
    <%= form_with model: book, local:true do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <div class="action py-2">
        <input type="submit" name="commit" value="Create Book" class="btn btn-sm btn-success">
      </div>
    <% end %>
  </div>