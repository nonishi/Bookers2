<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no_image.jpg"%>
    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
          <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
        <tr>
          <th>follows</th>
          <th>
            <%= link_to user_followings_path(user) do %>
              <%= user.followings.count %>
            <% end %>
            </th>
        </tr>
        <tr>
          <th>followers</th>
          <th>
            <%= link_to user_followers_path(user) do %>
              <%= user.followers.count %>
            <% end %>
          </th>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <% if current_user == user %>
        <%= link_to "", edit_user_path(user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
      <% else %>
        <% if current_user.following?(user) %>
          <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class:"btn btn-sm btn-success" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-sm btn-info" %>
        <% end %>
      <% end %>
    </div>
    <div class="form-body my-2">
      <h2>New book</h2>
      <%= form_with model: book, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title, class:"form-control" %>
        <h4>Opinion</h4>
        <%= f.text_area :body, class:"form-control" %>
        <%= f.submit 'Create Book', class:"btn btn-sm btn-success my-3" %>
      <% end %>
    </div>
  </div>